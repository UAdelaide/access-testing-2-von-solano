<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Buy</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>

<body>
    <h2>Textbooks</h2>
    <table>
        <caption>Available Textbooks</caption>
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Price</th>
                <th>Location</th>
                <th>Contact</th>
            </tr>
        </thead>
        <tbody>
            <% books.forEach(book=> { %>
                <tr>
                    <td>
                        <%= book.title %>
                    </td>
                    <td>
                        <%= book.author %>
                    </td>
                    <td>$<%= book.price %>
                    </td>
                    <td>
                        <%= book.location %>
                    </td>
                    <td>
                        <button @click="openForm(<%= book.book_id %>, <% book.seller_id %>)">Message Seller</button>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>

    <div id="app">
        <div v-if="showForm">
            <h3>Send a message</h3>
            <form @submit.prevent="send"
        </div>
    </div>

</body>

</html>